<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
	<display-name>OS</display-name>
	<description>Orders System</description>
	<listener>
		<listener-class>com.os.listener.SysListener</listener-class>
	</listener>
	<listener>
		 <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!--
	<context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    -->
	<filter>
		<filter-name>sysFilter</filter-name>
		<filter-class>com.os.filter.SysFilter</filter-class>
		<init-param>
			<param-name>isOpen</param-name>
			<param-value>0</param-value>
		</init-param>
		<init-param>
			<param-name>filter</param-name>
			<param-value></param-value>
		</init-param>
		<init-param>
			<param-name>notFilter</param-name>
			<param-value></param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>sysFilter</filter-name>
		<url-pattern>/Service/*</url-pattern>
	</filter-mapping>
	<error-page>
		<error-code>404</error-code>
		<location>/error404.html</location>
	</error-page>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>